mixin navigation(seshName)
  nav.navbar.navbar-default
    div.container-fluid
      div.navbar-header
        a.navbar-brand(href='../newPoll') Pollin' Season
      ul.nav.navbar-nav.navbar-left
        li
          a(href='../') Home
      ul.nav.navbar-nav.navbar-right
        if seshName
          li.dropdown
            a.dropdown-toggle(data-toggle="dropdown" href='#') Hello, #{seshName}
              |  
              span.caret
            ul.dropdown-menu
              li
                a(href="../newPoll") New Poll
              li
                a(href="../myPolls") My Polls
              li
                a(href="../sharedPolls") Polls Shared With Me
              li
                a(href="../otherPolls") Community Polls
              li
                a(href="../userList") Site Users
          li  
            a(href='../settings') Settings
          li
            a(href='../logout') Sign Out
        else
          li
            a(href='../signup') Sign Up
          li
            a(href='../login') Log In
